<H1>Add Recipe</H1>

<div class="add-recipe">
  <form class="recipe-form" id="recipe_form">
    <label for="recipe-name">Recipe Name:</label>
    <input type="text" id="recipe_name" />

    <label for="method">Method:</label>
    <input type="text" id="method" />

    <label for="beer_style">Beer Style:</label>
    <input type="text" id="beer_style" />

    <label for="hops">Hops:</label>
    <input type="text" id="hops" />

    <div class="ingredients-image">

      <h4>Ingredients:</h4>
      <div id="ingredient-container">
        {{!<input type="text" class="ingredients" /> }}
        <textarea name="" id="ingredients" cols="50" rows="5"></textarea>
      </div>
      <div id="upload-image">
        <label for="image_url">Add Image:</label>
        <button id="upload" value="click" type="button">Upload Image</button>
      </div>
    </div>
    <button id="recipe_submit" data-value="{{user_id}}" type="submit">Submit</button>
  </form>
  
</div>

<script src="/js/addRecipe.js"></script>
<script
  src="https://upload-widget.cloudinary.com/global/all.js"
  type="text/javascript"
>
</script>
<script src="/js/upload.js"></script>