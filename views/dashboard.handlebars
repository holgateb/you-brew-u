<div class="login">
  <h1>User Dashboard</h1>
  <br />

  <h3>User: {{user.email}}</h3>
  <br />

  <button class="btn" onclick="location.href = '/addRecipe'">+ Add Recipe +</button>

  <h2> Recipes:</h2>
  <br />

  <div class="container">
    {{#each recipe}}

      <div class="recipe-card">
          <div class="card-header">
            <h2>{{recipe.recipe_name}} Recipe</h2>
          </div>
        <div class="inside-card">
          <div class="menu-card">
            <div class="card-body">
              <ul>
                <li>Beer Style: {{recipe.beer_style}}</li>
                <li>Method: {{recipe.method}}</li>
                <li>Hops: {{recipe.hops}}</li>
                <li>Ingredients: {{recipe.ingredients}}</li>
              </ul>
            </div>
          </div>
          <img src="{{recipe.image_url}}" alt="image of product" />
        </div>
      </div>

    {{/each}}
  </div>
</div>