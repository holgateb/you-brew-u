{{#each recipe as |recipe|}}
  <div class="recipe-card">
        <div class="row align-center mb-5 menu-card">
      <div class="col-md-6 card-header">
        <h2>{{user.name}}</h2>
      </div>
    <div class="row align-center mb-5 menu-card">
      <div class="col-md-6 card-header">
        <h2>{{recipe_name}}</h2>
      </div>
      <div class="col-md-6 card-body">
        <h3>{{ingredients}}</h3>
      </div>
      <div class="col-md-6 card-body">
        <h1>Comment</h1>
        {{#each Comment as |comment|}}
        <h3>{{comment}}</h3>
        {{/each}}
      </div>
    </div>
  </div>

{{/each}}